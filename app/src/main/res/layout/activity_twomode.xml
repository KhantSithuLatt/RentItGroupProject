<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.twomode">

    <Button
        android:id="@+id/User_mode"
        android:layout_width="148dp"
        android:layout_height="89dp"
        android:layout_marginTop="272dp"
        android:text="User"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Admin_mode"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:layout_marginTop="116dp"
        android:text="Admin"
        app:layout_constraintEnd_toEndOf="@+id/User_mode"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/User_mode"
        app:layout_constraintTop_toBottomOf="@+id/User_mode" />
</androidx.constraintlayout.widget.ConstraintLayout>