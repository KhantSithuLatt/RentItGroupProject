<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddingCar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminCarAddImage"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/start_cr" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/adminCarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Car Name"
            />

        <EditText
            android:id="@+id/adminCarDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Description of car"
            />

        <EditText
            android:id="@+id/adminCarAddPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Car rent price"
            android:numeric="integer|decimal" />
        <EditText
            android:id="@+id/adminCarAddEngine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Car Engine(Diesel or RON)"
            />
        <EditText
            android:id="@+id/adminCarAddType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Car Type"
            />

        <EditText
            android:id="@+id/adminCarAddKilo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Driven KILO"
            android:numeric="decimal" />
        <EditText
            android:id="@+id/adminCarAddAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Acceleration"
            android:numeric="decimal" />
        <EditText
            android:id="@+id/adminCarAddSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Speed"
            android:numeric="decimal" />

        <EditText
            android:id="@+id/adminCarAddGear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/loginboxbg"
            android:hint="Enter Gear Type (Manual or Auto)" />

        <Button
            android:id="@+id/adminCarAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add" />


    </LinearLayout>
</LinearLayout>